<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sewil" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_primaryVariant</item>
        <item name="colorOnPrimary">@color/blueish_gray_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueish_gray_light</item>
        <item name="colorSecondaryVariant">@color/blueish_gray_dark</item>
        <item name="colorOnSecondary">@color/md_theme_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Sewil.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sewil.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Sewil.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>